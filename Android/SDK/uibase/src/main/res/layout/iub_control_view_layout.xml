<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#4D000000"
    android:layout_gravity="bottom">

    <ImageView
        android:id="@+id/play_status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:src="@drawable/iub_alivc_playstate_play" />

    <SeekBar
        android:id="@+id/seek_bar_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/total_position"
        android:layout_toRightOf="@+id/current_position"
        android:maxHeight="4dp"
        android:progressDrawable="@drawable/iub_live_play_seekbar_bg"
        android:thumb="@drawable/iub_general_seekbar_thum" />

    <TextView
        android:id="@+id/current_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/play_status_btn"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/total_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>